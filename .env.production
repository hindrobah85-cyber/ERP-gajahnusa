# Production Environment Configuration
# GAJAH NUSA ERP System

# Database Configuration
DATABASE_URL=postgresql://erp_user:secure_password@localhost:5432/erp_production
SQLITE_URL=sqlite:///./data/erp_production.db

# API Configuration
API_BASE_URL=https://api.gajahnusa.com
API_VERSION=v1
API_PORT=8001

# Security Configuration
SECRET_KEY=your-super-secure-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Configuration
ALLOWED_ORIGINS=["https://gajahnusa.com", "https://app.gajahnusa.com"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE"]
ALLOWED_HEADERS=["*"]

# Mobile App Configuration
EXPO_PUBLIC_API_BASE_URL=https://api.gajahnusa.com
EXPO_PUBLIC_APP_NAME=GAJAH NUSA ERP
EXPO_PUBLIC_APP_VERSION=1.0.0

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIRECTORY=./uploads/production

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/production.log

# Email Configuration (if needed)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gajahnusa.com
SMTP_PASSWORD=your-app-password

# Backup Configuration
BACKUP_DIRECTORY=./backups/production
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# Performance Configuration
WORKERS=4
TIMEOUT=60
MAX_CONNECTIONS=1000

# Feature Flags
ENABLE_FRAUD_DETECTION=true
ENABLE_OFFLINE_MODE=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
