# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/gajah_nusa_erp
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=gajah_nusa_erp
DATABASE_USER=username
DATABASE_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
SECRET_KEY=your-super-secret-jwt-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=GAJAH NUSA ERP
DEBUG=True
CORS_ORIGINS=["http://localhost:3000", "http://localhost:19006"]

# File Storage
UPLOAD_DIRECTORY=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=["jpg", "jpeg", "png", "pdf", "xlsx", "csv"]

# ML Model Configuration
ML_MODEL_PATH=./ml-engine/models
FRAUD_DETECTION_THRESHOLD=0.7
PREDICTION_UPDATE_INTERVAL=3600  # seconds

# Email Configuration (for notifications)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Mobile App Configuration
EXPO_ACCESS_TOKEN=your-expo-access-token
PUSH_NOTIFICATION_KEY=your-push-notification-key

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Development/Production Environment
ENVIRONMENT=development
